pipeline {
  agent any
  stages {
    stage('git clone') {
      steps {
        git 'https://github.com/whimshot/ansible.git'
      }
    }
    stage('run ansible playbook') {
      steps {
        ansiblePlaybook colorized: true, credentialsId: 'pi', disableHostKeyChecking: true, installation: 'ansible', inventory: 'hosts.yml', playbook: 'shairport-sync.yml'
      }
    }
  }
}
